[init]
    defaultBranch = main


[core]
    autocrlf = false


[giggle]
	compact-mode = false
	main-window-maximized = true
	main-window-geometry = 0x0+0+0
[rerere]
	enabled = 1


[color]
    ui = auto
[bz]
	browser = google-chrome


[push]
	default = matching


[alias]
    logup = git log --reverse --stat --patch @{upstream}..
    reup = git rebase -i @{upstream}^
    update = git stash && git fetch --all && git pull --rebase && git stash pop
    up = update

    gl = log --oneline --graph --date-order --decorate --pretty=format:'%Creset %Cgreen%h %Creset%C(bold white) %s %C(bold black)by%C(reset) %C(cyan)%an%Creset (%ar) %C(yellow) %d %Cred %ad' --branches
    ggg = gl
    gg = !gl --color=always | head -50
    g = !gl --color=always | head -10

    log2 = log --oneline --graph --date-order --decorate --pretty=format:'%Creset %Cgreen%h %Creset%C(bold white) %s %C(bold black)by%C(reset) %C(cyan)%an%Creset (%ar) %C(yellow) %d %Cred %ad'
    log3 = log --oneline --graph --date-order --decorate --pretty=format:'%Creset %Cgreen%h %Creset%C(bold white) %s %C(bold black)by%C(reset) %C(cyan)%an%Creset (%ar) %C(yellow) %d %Cred %ad' --branches
	ctags = !.git/hooks/ctags

[pack]
    packSizeLimit = 333m


[diff "lisp"]
    xfuncname="^(\\((def|test).*)$"
[diff "clj"]
    xfuncname="^(\\((def|test).*)$"
[diff "gpg"]
    textconv = gpg2 --batch --quiet --decrypt
    cachetextconv = false
    binary = true
[diff "jpg"]
    textconv = exif
[diff "pandoc"]
    textconv=pandoc --to=markdown
    prompt = false
[diff "word"]
    binary = true
    textconv = docx2txt.sh


[user]
	name = Martin Dengler
	email = martin@martindengler.com
[sendemail]
    bcc = martin@martindengler.com
[init]
	templatedir = ~/.git_template
[credential "https://github.com"]
	username = mdengler
